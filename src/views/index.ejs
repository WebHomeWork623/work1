<%- include header %>
<style>
    @media only screen and (min-width: 1200px) {
        .blog-g-fixed {
            max-width: 1200px;
            min-height: 560px;
        }
    }

    @media only screen and (min-width: 641px) {
        .blog-sidebar {
            font-size: 1.4rem;
        }
    }
    
    .blog-title {
        margin: 10px 0 20px 0;
    }

    .blog-meta {
        font-size: 14px;
        margin: 10px 0 20px 0;
        color: #222;
    }

    .blog-meta a {
        color: #27ae60;
    }

    .blog-pagination a {
        font-size: 1.4rem;
    }

    .blog-team a {
        margin: 4px 8px;
    }

    .blog-team img {
        margin-bottom: 0;
    }
    article{
        background:rgba(240,240,240,.9);
        box-shadow: 0 0 6px rgba(0,0,0,.3);
        border-radius: 4px;
        padding:1.4em 1.5em;
        position:relative;
    }
    .blog-content {
        max-height: 12.3em;
        overflow: hidden;

    }


    .blog-content img,
    .blog-team img {
        max-width: 100%;
        height: auto;
    }

    .blog-message {
        margin-top: 14px;
    }
    #postdate {
        position:absolute;
        display:block;
        background:rgba(204,204,204,.4);
        width:5em;
        text-align: center;
        top:20px;
        left:-54px;
        font-weight: normal;
        font-family: Arial;
        padding:.1em .2em;
    }
    #shadow {
        position: absolute;
        top: 42px;
        left: 0;
        border-color: transparent #222 transparent transparent;
        border-style: solid;
        border-width: 0 54px 20px 0;
        height: 0;
        width: 0;
    }
    .gotop {
        position: fixed;
        bottom: 80px;
        right: 60px;
        transition: transform 1s;
    }
    .gotop:hover {
        transform: rotate(5deg);
    }
    .gotop a {
        outline: 0;
    }
    ::-moz-focus-inner {
        border:0px;
    }
    
    #demo-slider-0 {
        background:transparent;
        width: 100%;
        height: auto;
        max-width: 100%; 
    }
    .my-animation-delay {
        -webkit-animation-delay: 300ms;
        animation-delay: 300ms;
    }
    

</style>
<!--轮播图-->
<div class="am-slider am-slider-default" data-am-flexslider id="demo-slider-0">
  <ul class="am-slides">
    <li><img class="sidebar-img" src="/images/toolbar-1.png" /></li>
    <li><img class="sidebar-img" src="/images/toolbar-2.png" /></li>
    <li><img class="sidebar-img" src="/images/toolbar-3.png" /></li>
    <li><img class="sidebar-img" src="/images/toolbar-4.png" /></li>
  </ul>
</div>

<a href="#top">
<div class="am-g am-g-fixed blog-g-fixed am-animation-fade my-animation-delay">
    <div class="am-u-md-8">
        <% posts.forEach(function (post, index) { %>
        <article id="showlist">
            <h3 class="am-article-title blog-title">
                <a href="/u/<%= post.name %>"><img class="am-comment-avatar" src="<%=post.head%>" width="50px" height="50px"></a>&nbsp;&nbsp;<a href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
            </h3>
            <h4 class="am-article-meta blog-meta">by <a href="/u/<%= post.name %>"><%= post.name %></a> posted on <span id="postdate"><%= post.time.minute %><span><i id='shadow'></i></h4>

            <div class="am-g blog-content">
                <div class="am-u-sm-12">
                    <%- post.post %>
                </div>
            </div>

            <!-- <a class="am-btn am-btn-success am-btn-sm" href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">查看更多 →</a> -->

            <div class="am-article-meta blog-message">
                <% if (post.tags.length > 0) { %>
                <span><i class="am-icon-tag"></i>
                标签：<% post.tags.forEach(function (tag, index) { %>
                    <% if (tag) { %>
                    <a href="/tags/<%= tag %>"><%= tag %></a>
                    <% } %>
                    <% }) %></span>
                <% } else { %>
                <span><i class="am-icon-tag"></i> 标签： 快给它贴上标签吧~</span>
                <% } %>

                <div class="am-align-right">
                    <span>阅读：<%= post.pv %></span>
                    <span>评论：<%= post.comments.length %></span>
                    <!-- <span>转载：
                    <% if (post.reprint_info.reprint_to) { %>
                    <%= post.reprint_info.reprint_to.length %>
                    <% } else { %>
                    <%= 0 %>
                    <% } %>
                    </span> -->
                </div>
            </div>
        </article>

        <hr class="am-article-divider">
        <% }) %>

        <%- include paging %>

    </div>

    <div class="am-u-md-4 blog-sidebar">
        <div class="am-panel-group">
            <%- include hot %>
            <%- include tags %>
            <%- include rank %>
        </div>
    </div>

</div>
<div class="gotop">
    <a href="#top" class="gotop-a"><img src="/images/gotop.png" ></a>
</div>

<%- include footer %>