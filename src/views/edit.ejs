<%- include header %>
<style>
  .am-u-lg-6.am-u-md-8.am-u-sm-centered {
    background: rgba(255,255,255,.9);
    margin: 30px auto;
    border-radius: 5px;
  } 
  .am-u-lg-6.am-u-md-8.am-u-sm-centered h3 {
    text-align: center;
    padding-top: 1em;
  } 
</style>
<div class="am-g">
    <div class="am-u-lg-6 am-u-md-8 am-u-sm-centered">
        <h3>编辑文章</h3>
        <hr>
        <form class="am-form" id="doc-vld-msg" method="post">
            <fieldset>
                <div class="am-form-group">
                    <label for="doc-vld-name-2-1">标题：</label>
                    <input type="text" name="title" id="doc-vld-name-2-1" value="<%= post.title %>" required/>
                </div>

                <div class="am-form-group">
                    <label for="doc-tag">标签：</label>
                    <input type="text" name="tags" id="doc-tag" placeholder="多个标签使用『;』分隔" value="<%= post.tags.join(";") %>" required/>
                </div>

                <div class="am-form-group">
                    <label for="doc-ta-1">正文</label>
                    <textarea class="" rows="9" id="doc-ta-1" name="post"><%= post.post %></textarea>
                </div>

                <button class="am-btn am-btn-secondary" type="submit">保存修改</button>
            </fieldset>
        </form>
        <br>
    </div>
</div>
<%- include footer %>