<%- include header %>
<style>
    .am-u-lg-5.am-u-md-6.am-u-sm-centered {
        background: rgba(236, 240, 241,.9);
        box-shadow: 1px 1px 10px #666;
        margin: 20px auto;
        border-radius:  5px;
        color: #666;
    }
    #forminput .my-form {
        width: 80%;
        display: inline-block;
        float: right;
        background: rgba(240,240,240,.8);
        border-radius: 4px;
        transition: border 1s;
    }
    .am-u-lg-5.am-u-md-6.am-u-sm-centered h3 {
        word-spacing: 1.2em;
        color:#aaa;
        font-weight: bold;
        font-size: 1.2em;
        font-family: Arial;
        padding-top: .8em;
        text-align: center;
    }
    #head-place {
        display: inline-block;
        width: 4em;
    }
</style>
<div class="am-g">
    <div class="am-u-lg-5 am-u-md-6 am-u-sm-centered" id="forminput">
        <h3>用户: <%=user.name%></h3>
        <hr>
        <form action="/edit/u" class="am-form" id="doc-vld-msg" method="post" enctype="multipart/form-data">
            <fieldset>
            <div class="am-form-group am-form-file">
            <img src="<%=user.head%>" width="120px" height="120px"><span id="head-place"></span>
            <label for="doc-ipt-file-2">上传头像：</label>&nbsp;&nbsp;
            <button type="button" class="am-btn am-btn-default am-btn-sm">
             <i class="am-icon-cloud-upload"></i>选择文件</button>
                <input type="file" id="doc-ipt-file-2" name="head" >
            </div>
                <div class="am-form-group">
                    <label for="doc-vld-name-2-1">重置密码：</label>
                    <input type="password" class="my-form" name="password" id="doc-vld-password-2-1" minlength="12" maxlength="16"  placeholder="密码长度12-16位" required/>
                </div>

                <div class="am-form-group">
                    <label for="doc-vld-name-2-1">确认密码：</label>
                    <input type="password" class="my-form" name="password-repeat" id="doc-vld-password-2-1" minlength="12" maxlength="16"  placeholder="再次输入密码" required/>
                </div>

                <div class="am-form-group">
                    <label for="doc-vld-email-2-1">邮箱：</label>
                    <input type="email" class="my-form" name="email" id="doc-vld-email-2-1" data-validation-message="自定义提示信息：输入地球上的电子邮箱撒" placeholder="输入邮箱" value="<%= user.email %>" required/>
                </div>

                <div class="am-form-group">
                    <label for="doc-vld-age-2-1">年龄：</label>
                    <input type="number" class="my-form"  id="doc-vld-age-2-1" placeholder="输入年龄(12-120)" min="12" max="120" name="age" value="<%= user.age %>" required />
                </div>

                <div class="am-form-group">
                    <label>性别： </label>
                    <label class="am-radio-inline">
                        <input type="radio"  value="M" name="gender" <% if (user.gender == "M") { %> checked <% } %> required> 男
                    </label>
                    <label class="am-radio-inline">
                        <input type="radio" value="F" name="gender" <% if (user.gender == "F") { %> checked <% } %> > 女
                    </label>
                    <label class="am-radio-inline">
                        <input type="radio" value="O" name="gender" <% if (user.gender == "O") { %> checked <% } %> > 其他
                    </label>
                </div>

                <div class="am-form-group">
                    <label for="doc-ta-1">个人信息</label>
                    <textarea class="" rows="1" id="doc-ta-1" name="message"><%= user.message %></textarea>
                </div>

                <button class="am-btn am-btn-secondary" type="submit">确认修改</button>
            </fieldset>
        </form>
        <br>
    </div>
</div>
<%- include footer %>

